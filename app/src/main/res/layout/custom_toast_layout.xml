<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/customtoast"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium1"
        android:layout_marginTop="@dimen/medium1"
        android:layout_marginEnd="@dimen/medium1"
        android:layout_marginBottom="@dimen/medium1"
        android:background="@drawable/toast_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/mini5"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toast_image"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/width" />

        <TextView
            android:id="@+id/uName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mini4"
            android:textFontWeight="900"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text2"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userDistanceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text2"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>